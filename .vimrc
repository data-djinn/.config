set number relativenumber
      set foldmethod=indent
      set foldlevel=99
      set linebreak
      set showbreak=+++
      set showmatch
      set smartcase
      set incsearch
      set ruler
      set hlsearch
  
      set encoding=utf-8
      set tabstop=4
      set softtabstop=4
      set shiftwidth=4
      set textwidth=79
      set expandtab
 set autoindent
 set fileformat=unix
 let python_highlight_all=1
 syntax on
